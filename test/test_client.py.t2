import asyncio
import json

;; define functions
async def start_client(host = "localhost", port=8089):
	reader, writer = await asyncio.open_connection(host, port)
	message = json.dumps({'name': "ntpy", 'version': "0.0.1"})
	writer.write(message.encode())
	await writer.drain()

	writer.close()
	await writer.wait_closed()
	print("Client closed")
